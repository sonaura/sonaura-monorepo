{
  "extends": "@sonaura/typescript-config/base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@sonaura/ui/*": ["../../packages/ui/src/*"],
      "@sonaura/database/*": ["../../packages/database/src/*"],
      "@sonaura/transactional/*": ["../../packages/transactional/emails/*"],
      "@sonaura/auth": ["../../packages/auth/src/index.ts"]
    },
    "lib": [
      "ESNext"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
}